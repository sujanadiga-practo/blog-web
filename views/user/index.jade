extends ../layout.jade
block content
  .container
    h2 All Users
    -if(users)
      -each user in users
        .container.user-block
          h4 
            a(href="/users/" + user.id)!= user.name
          em= "Joined " + time.relativeTime(user.createdAt)
          p
    -if(!users || users.length == 0)
      div(class="alert alert-warning", role="alert")
        p  Sorry, No users to display !!